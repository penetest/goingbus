.container {
	height: 100%;
  width: 100%;
}
scroll-view {
  position: absolute;
  top: 0px;
	/* top: 200rpx; */
	bottom: 0;
	left: 0;
	right: 0;
	background: #fafafa;
}

.line-header {
    position: fixed;
    width: 100%;
}
.line-title{
    position: relative;
    height:90px;
    padding-left:16px;
    background: #ffffff;
    overflow: hidden;
}
.line-name-area {
    font-size: 14px;
    width:320px;
    color: #333333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    
   
}
.line-name {
    float:left;
    margin-right:10px;
    font-weight: bold;
}
.line-from,
.line-to{
    float:left;
}
 .line-from-to-icon {
    float:left;
    font-size: 16px;
    color: #ADADAD;
    margin-left:6px;
    margin-right:6px;
}
.line-time-area view{
    display: inline;
}
.line-time-area {
    font-size: 12px;
    margin-top:8px;
    color: #666666;
}
.line-tips-area {
    font-size: 10px;
    margin-top:8px;
    color:  #e4b203;
}
.line-start {
    margin-right:4px;
}
.line-start-time {
    margin-right:12px;
}
.line-end {
    margin-right:4px;
}
.line-end-time {
    margin-right:12px;
}
.line-realtime-icon {
    font-size: 12px;
    color: #2590fe;
    margin-right:5px;
    transform:scale(0.75);
}

.icon-switch {
  width: 50rpx;
  height: 50rpx;
  padding: 0 50rpx;
  margin-top: -15rpx; 
  float: right;
}

.via-stop-list{
    position: absolute;
    top: 90px;
    width: 100%;
    bottom: 50px;
}
.via-stop-list-item{
    background-color: #fafafa;
    padding-left: 50px;
}
.via-stop-list-item-inner{
    display: table;
    margin: 0 -5px;
    width: 100%;
    height: 60px;
    border-bottom: 1px solid #ebebeb;
}
.via-stop-list-item-inner-click{
    display: table;
    margin: 0 -10px;
    width: 100%;
    height: 60px;
    border-bottom: 1px solid #ebebeb;
    background-color: #cdecff;
}

.via-stop-line-inner{
   margin-top: -50px;
   padding-left: 2px;
}

.via-stop-line-inner-bus{
   margin-top: -55px;
}

.via-stop-line-icon{
    display: inline-block;
    position:relative;
    height: 60px;
    width: 5px;
}

.via-stop-sug-text{
    display: table-cell;
    vertical-align: middle;
    height: 60px;
    width: 100%;
}

.via-stop-name{
    font-size: 16px;
    margin-top:10px;
    margin-left: 16px;
    line-height: 16px;
    color: #333;
    display: inline-block;
}
.via-stop-tranname{
    display: inline-block;
    margin-top: 5px;
    padding-left: 5px;
    font-size: 12px;
}
.via-stop-sug-icon{
    display: inline-block;
    width: 20px;
    margin-right: 10px;
}
.sug-line-icon{
    display: inline-block;
    position:relative;
    top:20px;
    height: 20px;
    width: 22px;
    /* background-image: url('./search_location.png'); */
    background-size: 20px 20px;
}

.via-stop-point-icon{
    display: inline-block;
    width: 20px;
    margin-right: 10px;
}
.via-stop-point-line-icon{
    display: inline-block;
    position:relative;
    top:20px;
    height: 10px;
    width: 10px;
    /* background-image: url('./search_location.png'); */
    background-size: 20px 20px;
}

.via-stop-point-line-icon-click{
    display: inline-block;
    position:relative;
    top:20px;
    height: 20px;
    width: 20px;
    margin-left: -5px;
    z-index:9999;
}

 /* 底部属性 */
.line_bottom {
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 50px;
  color: #aaa;
  background-color: #fff;
}


.line_bottom-tabbar-item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 9px 0 4px;
  width: 50px;
}

.collected {
  color:  #e4b203;
}

.setalarm {
  color:  #e4b203;
}

.icon {
  font-size: 20px;
}

.text {
  font-size: 10px;
}